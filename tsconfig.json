{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2019",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "allowJs": true,
      "sourceMap": true,
      "outDir": "app",
      "baseUrl": "src",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceRoot": "/",
      "paths": {
          "*": [
              "node_modules/*",
              "../app/node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}
