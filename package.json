{
  "name": "soundsync",
  "version": "1.0.0",
  "description": "Plug virtual cables between any audio source and any speakers in your home",
  "author": "Guillaume Besson <guillaume@besson.co>",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -b && cp src/package.json app/package.json",
    "build:watch": "tsc -w",
    "start": "electron app/index.js",
    "start:debug": "cross-env DEBUG=soundsync:*,-soundsync:timekeeper,-soundsync:*:timekeepResponse,-soundsync:*:timekeepRequest,-soundsync:api electron app/index.js",
    "pack": "electron-builder --dir",
    "pack:bin": "electron-builder -l AppImage",
    "postinstall": "electron-builder install-app-deps"
  },
  "license": "BSL 1.1",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "audify": "1.5.1",
    "auto-launch": "^5.0.5",
    "bonjour": "^3.5.0",
    "cross-env": "^6.0.3",
    "debug": "^4.1.1",
    "env-paths": "^2.2.0",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.15",
    "mkdirp": "^0.5.1",
    "open": "^7.0.0",
    "speex-resampler": "1.0.5",
    "superagent": "^5.1.3",
    "supports-color": "^7.1.0",
    "uuid": "^3.3.3",
    "wrtc": "^0.4.3",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "@types/bonjour": "^3.5.5",
    "@types/debug": "^4.1.5",
    "@types/koa": "^2.11.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.0.42",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.0.0",
    "@types/superagent": "^4.1.4",
    "@types/webrtc": "^0.0.25",
    "@types/yargs": "^13.0.4",
    "electron": "^7.1.11",
    "electron-builder": "^22.3.2",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  },
  "build": {
    "appId": "geekuillaume.soundsync",
    "productName": "Soundsync",
    "directories": {
      "output": "bin"
    },
    "extraResources": [
      "webui/dist",
      "res/**/*"
    ]
  }
}
